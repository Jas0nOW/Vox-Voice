{
  "schema_version": "1.0",
  "audio": {
    "backend": "pipewire",
    "sample_rate_hz": 48000,
    "channels_in": 1,
    "channels_out": 1,
    "pre_roll_seconds": 3
  },
  "dsp": {
    "mode": "speakers",
    "aec": {
      "enabled": true,
      "method": "pipewire-module-echo-cancel",
      "aggressiveness": "medium"
    },
    "ns": {
      "enabled": true,
      "level": 2,
      "profile": "balanced"
    },
    "agc": {
      "enabled": false,
      "mode": "adaptive",
      "target_level_dbfs": -18
    }
  },
  "wakeword": {
    "engine": "openWakeWord",
    "threshold": 0.5,
    "words": [
      "wanda"
    ]
  },
  "vad": {
    "command": {
      "min_speech_ms": 120,
      "end_silence_ms": 350,
      "continue_window_ms": 800
    },
    "chat": {
      "min_speech_ms": 160,
      "end_silence_ms": 650,
      "continue_window_ms": 1100
    }
  },
  "llm": {
    "backend": "gemini_cli",
    "profiles": {
      "fast": {
        "model": "gemini-3-flash-preview"
      },
      "reasoning": {
        "model": "gemini-3-pro-preview"
      },
      "auto": {
        "model": "auto",
        "auto_reasoning": true
      }
    },
    "active_profile": "fast",
    "gemini_cli": {
      "cmd": "gemini",
      "cwd": ".",
      "isolated_home": ".runtime/gemini_home",
      "rules_file": "config/gemini_voice_rules.md",
      "restart_on_exit": true
    },
    "ollama": {
      "base_url": "http://127.0.0.1:11434",
      "model": "llama3.1:8b-instruct",
      "stream": true
    },
    "recommended": {
      "gemini_profiles": [
        "auto",
        "fast",
        "reasoning"
      ],
      "ollama_models": [
        "llama3.1:8b-instruct",
        "qwen2.5:7b-instruct",
        "mistral:7b-instruct",
        "phi3:medium-instruct"
      ]
    }
  },
  "tts": {
    "default_voice": "edge:de-DE-SeraphinaNeural",
    "edge_tts": {
      "rate_pct": 15
    },
    "local": {
      "adapter": "xtts_v2"
    }
  },
  "skills": {
    "allowlist": [
      "window_control",
      "open_url",
      "clipboard"
    ],
    "permissions": {
      "window_control": "confirm",
      "open_url": "confirm",
      "clipboard": "safe"
    }
  },
  "logging": {
    "redaction": true,
    "retention_days": 14,
    "max_runs": 500
  },
  "stt": {
    "adapter": "faster_whisper",
    "profiles": {
      "fast": {
        "adapter": "faster_whisper",
        "model": "small"
      },
      "final": {
        "adapter": "faster_whisper",
        "model": "medium"
      }
    },
    "active_profile": "fast",
    "recommended": {
      "adapters": [
        "faster_whisper",
        "whisper_cpp",
        "sherpa_onnx"
      ],
      "faster_whisper_models": [
        "tiny",
        "base",
        "small",
        "medium"
      ]
    }
  }
}
